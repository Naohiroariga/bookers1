<h1 class="head-title">Editing Book</h1>

<% if @book.errors.any? %>
<div class="error-box">
  <p class="error-title"><%= @book.errors.count %> errors prohibited this book from being saved:</p>
   <ul class="error-text">
     <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
     <% end %>
   </ul>
</div>
<% end %>


<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
 <div class="book-box">
 <h4>Title</h4>
 <%= f.text_field :title %>
 </div>

 <div class="book-box">
 <h4>Body</h4>
 <%= f.text_area :body %>
 </div>

 <div class="book-box">
 <%= f.submit 'Update Book' %>
 </div>

 <%= link_to "Show", book_path(@book.id) %>
 |
 <%= link_to "Back", books_path %>
<% end %>