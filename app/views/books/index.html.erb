<h1 class= "head-title">Books</h1>

<table>
  <thead>
      <th class="table-title">Title</th>
      <th class="table-title">Body</th>
      <th class="table-title" colspan="3"></th>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td class="book-list"><%= book.title %></td>
      <td class="book-list"><%= book.body %></td>
      <td class="book-list"><%= link_to "Show", book_path(book.id) %></td>
      <td class="book-list"><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td class="book-list"><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>

    </tr>
    <% end %>
  </tbody>
</table>


<h2 class="new-title">New book</h2>

<% if @book.errors.any? %>
 <div class="error-box">
  <p class="error-title"><%= @book.errors.count %> errors prohibited this book from being saved:</p>
   <ul class="error-text">
     <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
     <% end %>
   </ul>
  </div>
<% end %>


<%= form_with model: @book do |f| %>
 <div class = "book-box">
 <h4>Title</h4>
 <%= f.text_field :title %>
 </div>
 <div class = "book-box">
 <h4>Body</h4>
 <%= f.text_area :body %>
 </div>
 <div class= "book-box">
 <%= f.submit 'Create Book' %>
 </div>
<% end %>